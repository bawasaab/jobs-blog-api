<script>
    $(document).ready(function() {
        $('#frm-contact-us').on('submit', function(e) {
            e.preventDefault();
            let url = api_base_url +'/contact-us';

            $.ajax({
                    url: url,
                    method: 'POST',
                    dataType: 'JSON',
                    data: $('#frm-contact-us').serialize(),
                success: function( retdata ) {
                    // console.log('retdata', retdata);
                    if( retdata.success ) {
                        $('#frm-contact-us').trigger("reset");
                    }
                    alert(retdata.msg);
                },
                error: function(e){
                    console.log(e);
                }
            });
        });
    });
</script>